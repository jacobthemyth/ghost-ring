mixin spacify(thing)
  = thing.replace(/-/g, ' ').replace('.html', '').replace(/[-\._]/g, ' ')

mixin makeLinks(index, thing)
  if typeof(thing) === 'object'
    if thing !== urls
      li
        a.folder(href="#")
          +spacify(index)
        
        ul
          if thing 
            if thing['index.html']
              +makeLinks(index, thing['index.html'])
              - delete thing['index.html']

            each subthing, subindex in thing
              +makeLinks(subindex, subthing)
    else
      if thing 
        if thing['index.html']
          +makeLinks(index, thing['index.html'])
          - delete thing['index.html']

        each subthing, subindex in thing
          +makeLinks(subindex, subthing)

ul.ghost-sidebar
  +makeLinks("Welcome to The Ghost of Swayze Past", urls)
